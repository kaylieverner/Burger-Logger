<div class="container">
  <div class="row">
    <div class="col">
      <img style="text-align: center; " src="../public/assets/img/burger.jpg" alt="burger">
    </div>
  </div>

  <div class="row">
    <div class="col">
      <h1 style="text-align: center; font-family: 'Bangers', cursive; color: rgb(207, 59, 59)" class="mainTitle mb-5">
        Eat the Burger!</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-6">
      <h2 style="font-family: 'Patrick Hand', cursive; text-align: center; ">Ready to Eat</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-6">
      <h2 style="font-family: 'Patrick Hand', cursive; text-align: center; ">Burgers Devoured</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <div class="alert alert-light" role="alert">
          <ol>{{burger_name}}</ol>
        </div>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <h2 style="font-family: 'Patrick Hand', cursive;">Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          {{!-- <label for="ca">Burger Name:</label> --}}
          <input type="text" id="ca" name="burger_name">
        </div>

        <button type="submit" class="btn btn-light">Submit</button>
      </form>
    </div>
  </div>
</div>